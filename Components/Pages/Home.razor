@page "/"

<div class="top-0 sticky bg-slate-800 text-white py-4">
    <h1 class="mt-5 font-black text-center text-3xl tracking-wider bg-clip-text text-transparent bg-gradient-to-r from-blue-300 via-green-200 to-yellow-300">ToDo</h1>
</div>
<h1>Alphabet</h1>

<div>
    <div class="grid grid-cols-6 gap-1 p-2">
      @foreach (var letter in lettersUppercase)
      {
          <button class="mt-4 bg-blue-500 font-bold py-2 px-4 rounded">
            @letter
          </button>
      }
    </div>

</div>

@code {

  private List<string> lettersUppercase = ["A", "Б", "В", "Г", "Д", "Е", "Ё", "Ж", "З", "И", "Й", "К", "Л", "М", "Н", "О", "П", "Р", "С", "Т", "У", "Ф", "Х", "Ц", "Ч", "Ш", "Щ", "Ъ", "Ы", "Ь", "Э", "Ю", "Я"];
  private List<string> lettersLowercase = ["a", "б", "в"];

}