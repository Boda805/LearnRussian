      { "Ж", "mea<u>**s**</u>ure" },
      { "З", "**<u>z**</u>oo" },
      { "И", "pol<u>**i**</u>ce" },
      { "Й", "to<u>**y**</u>" },
      { "К", "<u>**k**</u>ept" },
      { "Л", "<u>**l**</u>amp" },
      { "М", "<u>**m**</u>ap" },
      { "Н", "<u>**n**</u>ot" },
